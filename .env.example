# Required for Jina MCP
JINA_API_KEY=your_jina_api_key_here

# MCP server endpoint (SSE/HTTP). Default points to Jina MCP.
MCP_SERVER_URL=https://mcp.jina.ai/sse

# Enable MCP-backed reader and select transport
ENABLE_MCP_READER=true
MCP_TRANSPORT=adapters_http  # options: python, remote, adapters_http

# Timeouts
MCP_TIMEOUT_S=12.0

# Dual-read sampling for parity (0..100). 0 disables dual-read.
MCP_DUAL_READ_PCT=0

# Adapters (Python) tuning
MCP_ADAPTER_USE_SSE=false
MCP_ADAPTER_USE_STANDARD_BLOCKS=true

